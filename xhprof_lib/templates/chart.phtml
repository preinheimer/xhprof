<script type="text/javascript">
	/**
	 * Format an integer as a time value
	 *
	 * @param {String} time The value to format.
	 * @param {Number} decimals The amount of decimals
	 *
	 * @return string
	 */
	function printSeconds(time, decimals) {
	   decimals = typeof decimals !== 'undefined' ? decimals : 2;
		time = time * 1000;
		var prefix = '',
			suffix = 'Î¼s';
		if (time < 0) {
			time = Math.abs(time);
			prefix = '-';
		}

		if (time == 0) {
			suffix = '';
		}

		if (time >= 1000) {
			time = time / 1000;
			suffix = 'ms';
		}

		if (time >= 1000) {
			time = time / 1000;
			suffix = ' s';
		}

		if (time >= 60 && suffix == ' s') {
			time = time / 60;
			suffix = 'min!';
		}

		return prefix + Highcharts.numberFormat(time, decimals) + ' ' + suffix;
	}

	var chart;
	var runIds = [<?php echo $idsJS ?>];
	var domains = [<?php echo $domainsJS ?>];
	$(document).ready(function() {
		Highcharts.setOptions({
			lang: {
				thousandsSep: '<?php echo  $_xhprof['thousandsSeparator'] ?>',
				decimalPoint: '<?php echo $_xhprof['decimalSeparator'] ?>'
			}
		});
		chart = new Highcharts.Chart({
			chart: {
				renderTo: 'container',
				margin: [80, 200, 60, 100],
				zoomType: 'xy',
				events: {
					click: function(e) {
						// find the clicked values and the series
						var x = e.xAxis[0].value,
							y = e.yAxis[0].value,
							series = this.series[0];
					}
				}
			},
			credits: {
				enabled: false
			},
			title: {
				text: 'Comparison of <?php echo (isset($_GET['getcurl'])) ? 'similar' : 'the same' ?> urls',
				style: {
					margin: '10px 0 0 0' // center it
				}
			},
			subtitle: {
				text: 'Source: XH Gui',
				style: {
					margin: '0 0 0 0' // center it
				}
			},
			xAxis: [
				{
					categories: [<?php echo $dateidsJS;?>],
					labels: {
						formatter: function() {
							var date = (this.value).split(" ");
							return date[0];
						},
						rotation: -45,
						align: 'right'
					}
				}
			],
			yAxis: [
				{ // Primary yAxis
					labels: {
						formatter: function() {
							var yValue = Math.ceil(this.value / 1024 / 1024);
							return yValue.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "<?php echo $_xhprof['thousandsSeparator'] ?>") + ' MB';
						},
						style: {
							color: '#89A54E'
						}
					},
					title: {
						text: 'Peak Memory Usage',
						style: {
							color: '#89A54E'
						},
						margin: 15
					},
					opposite: true

				},
				{ // Secondary yAxis
					title: {
						text: 'CPU',
						margin: 15,
						style: {
							color: '#4572A7'
						}
					},
					labels: {
						formatter: function() {
							var yValue = Math.ceil(this.value / 1000);
							return printSeconds(yValue.toString(), 0);
						},
						style: {
							color: '#4572A7'
						}
					}

				},
				{ // Tertiary yAxis
					title: {
						text: 'Wall Time',
						margin: 15,
						style: {
							color: '#AA4643'
						}
					},
					labels: {
						formatter: function() {
							var yValue = Math.ceil(this.value / 1000);
							return printSeconds(yValue.toString(), 0);
						},
						style: {
							color: '#AA4643'
						}
					},
					opposite: true,
					offset: 100
				}
			],
			tooltip: {
				formatter: function() {
					var unit = {
						'': ''
					}[this.series.name],
						yValue = Math.ceil(this.y / 1000);

					if (this.series.index === 2) {
						yValue = Math.ceil(this.y / 1024);
						return '<b>' + this.series.name + '</b><br/><br/>' +
							yValue.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "<?php echo $_xhprof['thousandsSeparator'] ?>") + ' KB' +
							'<br/>' + runIds[this.point.x] +
							'<br/>' + domains[this.point.x];
					}
					return '<b>' + this.series.name + '</b><br/><br/>' +
						printSeconds(yValue.toString()) +
						'<br/>' + runIds[this.point.x] +
						'<br/>' + domains[this.point.x];
				}
			},
			legend: {
				verticalAlign: 'top',
				y: 35,
				backgroundColor: '#FFFFFF'
			},
			plotOptions: {
				series: {
					lineWidth: 1,
					point: {
						events: {
							'click': function() {
								if (this.series.data.length > 1) {
									document.location = '?run=' + runIds[this.series.index];
								}
							}
						}
					}
				}
			},
			series: [
				{
					name: 'CPU',
					color: '#4572A7',
					type: 'line',
					yAxis: 1,
					data: [<?php echo $cpuJS;?>]
				},
				{
					name: 'Wall Time',
					type: 'line',
					color: '#AA4643',
					yAxis: 2,
					data: [<?php echo $wtJS;?>]
				},
				{
					name: 'Peak Memory Usage',
					color: '#89A54E',
					type: 'line',
					data: [<?php echo $pmuJS;?>]
				}
			]
		});

	});
</script>
